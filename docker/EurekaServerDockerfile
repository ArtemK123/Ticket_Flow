FROM maven:3.6.3-jdk-14 AS build

# Root folder (with docker-compose.yml) should be specified as context
COPY ./backend/eureka_server/pom.xml /tmp/
COPY ./backend/eureka_server/src /tmp/src
WORKDIR /tmp/
RUN mvn -B package

FROM openjdk:14-jdk

RUN mkdir /app
COPY --from=build /tmp/target/*.jar /app/spring-boot-application.jar
ENTRYPOINT ["java", "-jar", "/app/spring-boot-application.jar"]

EXPOSE 8761